<h2 class="text-center">Finding Fresh Fruit With Technology</h1>

<div class="card">
  <h5 class="card-header">Change Password</h5>
  <div class="card-body">
		<form id="loginForm">
		  <div class="form-group">
		    <label>Current Password</label>
		    <input type="password" class="form-control" id="curPass" name="curPass" placeholder="Current Password">
		  </div>
		  <div class="form-group">
		    <label>New Password</label>
		    <input type="password" class="form-control" id="newPass" name="newPass" placeholder="New Password">
		  </div>
		  <div class="form-group">
		    <label>Retype New Password</label>
		    <input type="password" class="form-control" id="newPass2" name="newPass2" placeholder="Retype New Password">
		  </div>
		  <input type="button" value="Submit" id="submitBtn" class="btn btn-primary" onclick="changePassword(); return false;">
		</form>
  </div>
</div>